<% content_for :head do -%>
  <meta name="title" content="<%= Spree.t(:contact_us_title) %>">
<% end -%>

<% content_for :sidebar do
  if "products" == @current_controller && @taxon %>
    <%= render :partial => "spree/shared/filters" %>
  <% else %>
    <%= render :partial => "spree/shared/taxonomies" %>
  <% end
 end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<h1><%= Spree.t(:contact_us_title) %></h1>

<%= form_for @contact, :url => contacts_path do |f| %>
  <% if SpreeContactUs.require_name %>
    <div class="form-group">
      <%= f.label :name %>
      <abbr class="required">*</abbr><br/>
      <%= f.text_field :name, class: 'form-control required', required: true %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email %>
    <abbr class="required">*</abbr><br/>
    <%= f.email_field :email, class: 'form-control required email', required: true %>
  </div>

  <% if SpreeContactUs.require_subject %>
    <div class="form-group">
      <%= f.label :subject %>
      <abbr class="required">*</abbr><br/>
      <%= f.text_field :subject, class: 'form-control required', required: true %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :message %>
    <abbr class="required">*</abbr><br/>
    <%= f.text_area :message, class: 'form-control required', required: true %>
  </div>

  <div class="form-group">
    <%= f.submit Spree.t(:submit), :class => 'btn btn-primary', :alt => Spree.t(:submit), :id => 'contact_us_contact_submit', :title => Spree.t(:submit) %>
  </div>
<% end %>
